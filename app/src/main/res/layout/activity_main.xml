<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10px"
    android:padding="10px"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <TextView
            android:text="@string/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="24sp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/main_play_go_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_go_label" />
        <Button
            android:id="@+id/main_play_sudoku_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_sudoku_label" />
        <Button
            android:id="@+id/main_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_label" />
        <Button
            android:id="@+id/main_logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout_label" />
        <Button
            android:id="@+id/main_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_label" />
        <Button
            android:id="@+id/main_setup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setup_label" />
        <Button
            android:id="@+id/main_get_groups_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_groups_label" />
        <Button
            android:id="@+id/main_exit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit_label" />
        <Button
            android:id="@+id/main_about_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_label" />
    </LinearLayout>
</LinearLayout>
